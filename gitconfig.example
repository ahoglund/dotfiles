[credential]
  helper = GIT_CREDENTIAL_HELPER
[push]
  default = simple
[alias]
  st = status
  df = diff
  ci = commit
  co = checkout
  br = branch
  pl = pull
  ps = push
  evolve = "! f() { git checkout $1 && git pull;}; f"
[init]
  templatedir = ~/.git_template
[fetch]
  prune = true
[pull]
  rebase = false
[core]
  editor = nvim
  excludesfile = ~/.gitignore.global
